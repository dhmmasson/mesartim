extends ./layout.pug
block content 
	.row
		form.z-depth-1( class="col s12 m12 l8 offset-l2", id="register" action="register" method="post")
			.row
				.input-field.col.s12.l6
					input( id="first_name", type="text", class="validate", name="prenom" )
					label( or="first_name" ) First name 		
				.input-field.col.s12.l6
					input(id="last_name", type="text", class="validate", name="nom" )
					label(for="last_name") Last name
			.row
				.input-field.col.s12
					input( id="entreprise", type="text", class="validate", name="entreprise" )
					label( for="entreprise") Organisation
			.row 
				.input-field.col.s12
					input(id="email", type="email", class="validate", required, name="email")
					label(for="email") Email 
						span.super *
			.row
				.input-field.col.s12.l6
					.row.radioGroup
						label Sex
						span.col.l4.m4.s12 
							input( type="radio", name="sex", id="sexe_masculin"  value="male") 
							label( for="sexe_masculin" ) Male
						span.col.l4.m4.s12
							input( type="radio", name="sex", id="sexe_feminin"  value="female" ) 
							label( for="sexe_feminin" ) Female
						span.col.l4.m4.s12
							input( type="radio", name="sex", id="sexe_autre_na"   value="na") 
							label( for="sexe_autre_na" ) Other
				.input-field.col.s12.l6
					select( name="ageRange" )
						option( disabled, selected ) Enter your age
						option( value="17") under 18 years
						option( value="18") 18-25 years
						option( value="25") 25-35 years
						option( value="35") 35-45 years 
						option( value="45") 45-55 years
						option( value="55") more than 55 years
					label Age range
			.row
				.input-field.col.s12.l6
					select( name="lastDiploma")
						option( disabled, selected ) Please indicate your last diploma
						option( value="0") No diploma
						option( value="1") High school degree
						option( value="2") Bachelor degree
						option( value="3") Master degree
						option( value="5") MBA degree
						option( value="8") PhD degree
					label last diploma
				.input-field.col.s12.l6
					select( name="organism") 
						option( disabled, selected ) Which organization / profession do you belong?
						option( value="GRE") Large group (more than 5000 employees)
						option( value="ETI") ETI (250-4999 employees)
						option( value="PME") Medium-sized enterprise(50-249 employees)
						option( value="TPE") Small entreprise (10-49 employees)
						option( value="SUP") Start-up (less than 10 employees)
						option( value="AUE") Auto-Entrepreneur
						option( value="LAB") Laboratory
						option( value="ECO") Engineering School
						option( value="UNI") University
						option( value="ASS") Association
						option( value="ONG") NGO
						option( value="COL") Local authorities
						option( value="SEP") Public service
						option( value="ETU") Student
						option( value="RET") Retired
						option( value="SEM") Unemployed
						option( value="AUT") Other
					label Organisation 
				.input-field.col.s12.l6
					select( name="jobtype" )
						option( disabled, selected ) What kind of position do you hold?
						option( value="MAN") Manager
						option( value="EXP") Technical expert
						option( value="AUT") Other
					label Position
				.input-field.col.s12.l6
					select( name="motivation" )
						option( disabled, selected ) What is your initial motivation?
						option( value="RES") Enhance my network
						option( value="INN") Generate ideas for collaborative innovation projects
						option( value="AUT") Other
					label Motivation
				.input-field.col.s12.l6
					select( name="implantation" )
						option( disabled, selected ) Where are you from?
						option( value="RE1") France - Nouvelle-Aquitaine
						option( value="RE2") France - Occitanie
						option( value="RE3") France - Provence-Alpes-CÃ´te d'Azur
						option( value="RE4") Italy
						option( value="RE5") Spain
						option( value="RE6") Greece
						option( value="RE7") Romania
						option( value="RE8") Sweden
						option( value="RE9") Poland
						option( value="RE10") Other
					label Location
			.row
				div#seanceDiv.input-field.col.s6
					select#seance(name="seanceId", class="validate", required)
						option( value="", disabled selected) Choose a Creative Session
					label Creative Session
				div.input-field.col.s3.offset-s3.m4.l4.offset-m2.offset-l2
					button( class="btn waves-effect waves-light", type="submit", name="action") Start Creative Session
						i(class="material-icons right") send