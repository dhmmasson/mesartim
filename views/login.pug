extends ./layout.pug
block content 
	.row
		form( class="col s12 m12 l8 offset-l2", id="register" action="register" method="post")
			.row
				.input-field.col.s12
					input( id="first_name", type="text", class="validate", name="prenom" )
					label( or="first_name" ) Prénom 
			.row
				.input-field.col.s12
					input(id="last_name", type="text", class="validate", name="nom" )
					label(for="last_name") Nom
			.row
				.input-field.col.s12
					input( id="entreprise", type="text", class="validate", name="entreprise" )
					label( for="entreprise") Organisation
			.row 
				.input-field.col.s12
					input(id="email", type="email", class="validate", name="email")
					label(for="email") Email
			.row
				div#seanceDiv.input-field.col.s6
					select#seance(name="seanceId") 
						option( value="", disabled selected) Choisir une séance 
					label Séance				
				div.input-field.col.s3.offset-s3
					button( class="btn waves-effect waves-light", type="submit", name="action") Commencer la séance
						i(class="material-icons right") send
